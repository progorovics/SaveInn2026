<style>
  .hero {
    background-image:
      linear-gradient(
        rgba(255, 255, 255, 0.92),
        rgba(255, 255, 255, 0.88)
      ),
      url('/hero-background.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: var(--spacing-xxl) 0;
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
  }

  /* Fallback if image doesn't exist */
  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--color-gray-lightest) 0%, var(--color-white) 100%);
    z-index: -1;
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-gray-dark);
    text-shadow: 0 2px 4px rgba(255, 255, 255, 0.8);
  }

  .brand-name {
    color: var(--color-red-primary);
    font-weight: 800;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-gray-dark);
    margin-bottom: var(--spacing-lg);
    text-shadow: 0 1px 3px rgba(255, 255, 255, 0.8);
  }

  .hero-features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
    font-size: 1rem;
    color: var(--color-gray-dark);
  }

  .feature {
    font-weight: 600;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: var(--spacing-xl) 0;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .hero-features {
      flex-direction: column;
      align-items: center;
      gap: var(--spacing-xs);
    }

    .hero-cta {
      flex-direction: column;
    }

    .btn-large {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
