---
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-md sticky top-0 z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="flex items-center justify-between py-3 gap-6">
      <!-- Logo -->
      <a href="/" class="flex items-center hover:opacity-90 transition-opacity">
        <img src="/logo.png" alt="SAVE INN - Reifenmeister" class="h-12 sm:h-14 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        <li>
          <a
            href="/"
            class={`font-semibold text-gray-700 hover:text-blue-900 transition-colors pb-1 border-b-2 ${currentPath === "/" ? "border-blue-900 text-blue-900" : "border-transparent"}`}
          >
            Home
          </a>
        </li>
        <li>
          <a
            href="/#leistungen"
            class="font-semibold text-gray-700 hover:text-blue-900 transition-colors pb-1 border-b-2 border-transparent"
          >
            Leistungen
          </a>
        </li>
        <li>
          <a
            href="/kontakt"
            class={`font-semibold text-gray-700 hover:text-blue-900 transition-colors pb-1 border-b-2 ${currentPath === "/kontakt" ? "border-blue-900 text-blue-900" : "border-transparent"}`}
          >
            Kontakt
          </a>
        </li>
      </ul>

      <!-- Contact Button - Desktop -->
      <a
        href="tel:040773192"
        class="hidden md:flex items-center gap-2 bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-3 rounded-lg transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56a.977.977 0 00-1.01.24l-1.57 1.97c-2.83-1.35-5.48-3.9-6.89-6.83l1.95-1.66c.27-.28.35-.67.24-1.02-.37-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 3 3 3.24 3 3.99 3 13.28 10.73 21 20.01 21c.71 0 .99-.63.99-1.18v-3.45c0-.54-.45-.99-.99-.99z"/>
        </svg>
        <span class="whitespace-nowrap">040-773192</span>
      </a>

      <!-- Mobile Menu Toggle -->
      <button
        class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
        aria-label="Menu Ã¶ffnen"
        aria-expanded="false"
        id="mobile-menu-toggle"
      >
        <div class="w-6 h-5 flex flex-col justify-between">
          <span class="w-full h-0.5 bg-blue-900 transition-all duration-300 origin-center"></span>
          <span class="w-full h-0.5 bg-blue-900 transition-all duration-300"></span>
          <span class="w-full h-0.5 bg-blue-900 transition-all duration-300 origin-center"></span>
        </div>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div class="md:hidden hidden border-t border-gray-100" id="mobile-nav">
      <ul class="py-4 space-y-1">
        <li>
          <a
            href="/"
            class="block px-4 py-3 text-gray-700 font-semibold hover:bg-gray-50 hover:text-blue-900 transition-colors rounded-lg mobile-nav-link"
          >
            Home
          </a>
        </li>
        <li>
          <a
            href="/#leistungen"
            class="block px-4 py-3 text-gray-700 font-semibold hover:bg-gray-50 hover:text-blue-900 transition-colors rounded-lg mobile-nav-link"
          >
            Leistungen
          </a>
        </li>
        <li>
          <a
            href="/kontakt"
            class="block px-4 py-3 text-gray-700 font-semibold hover:bg-gray-50 hover:text-blue-900 transition-colors rounded-lg mobile-nav-link"
          >
            Kontakt
          </a>
        </li>
        <li class="pt-2">
          <a
            href="tel:040773192"
            class="flex items-center justify-center gap-2 bg-red-600 hover:bg-red-700 text-white font-semibold px-4 py-3 rounded-lg transition-colors mx-4 mobile-nav-link"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56a.977.977 0 00-1.01.24l-1.57 1.97c-2.83-1.35-5.48-3.9-6.89-6.83l1.95-1.66c.27-.28.35-.67.24-1.02-.37-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 3 3 3.24 3 3.99 3 13.28 10.73 21 20.01 21c.71 0 .99-.63.99-1.18v-3.45c0-.54-.45-.99-.99-.99z"/>
            </svg>
            <span>040-773192</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuToggle = document.getElementById('mobile-menu-toggle');
  const mobileNav = document.getElementById('mobile-nav');

  if (menuToggle && mobileNav) {
    menuToggle.addEventListener('click', () => {
      const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
      menuToggle.setAttribute('aria-expanded', String(!isExpanded));
      mobileNav.classList.toggle('hidden');

      // Animate hamburger icon
      const spans = menuToggle.querySelectorAll('span');
      if (!isExpanded) {
        spans[0].style.transform = 'rotate(45deg) translateY(8px)';
        spans[1].style.opacity = '0';
        spans[2].style.transform = 'rotate(-45deg) translateY(-8px)';
      } else {
        spans[0].style.transform = 'none';
        spans[1].style.opacity = '1';
        spans[2].style.transform = 'none';
      }
    });

    // Close mobile menu when clicking a link
    const mobileLinks = document.querySelectorAll('.mobile-nav-link');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileNav.classList.add('hidden');
        menuToggle.setAttribute('aria-expanded', 'false');
        const spans = menuToggle.querySelectorAll('span');
        spans[0].style.transform = 'none';
        spans[1].style.opacity = '1';
        spans[2].style.transform = 'none';
      });
    });
  }
</script>
