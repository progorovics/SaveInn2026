---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="group bg-white border-2 border-gray-200 rounded-xl p-6 lg:p-8 transition-all duration-300 hover:border-blue-900 hover:shadow-xl hover:-translate-y-2 h-full flex flex-col items-center text-center">
  <div class="text-5xl lg:text-6xl mb-6 transition-transform duration-300 group-hover:scale-110">
    {icon}
  </div>
  <h3 class="text-xl font-bold text-gray-800 mb-3 transition-colors duration-300 group-hover:text-blue-900">
    {title}
  </h3>
  <p class="text-gray-600 text-sm lg:text-base leading-relaxed">
    {description}
  </p>
</div>
